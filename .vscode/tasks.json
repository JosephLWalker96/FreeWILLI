{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}/C/out"
            ],
            "options": {
                "cwd": "${workspaceFolder}/C"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./bin/HarpListen",
            "args": [
                "self",
                "1045",
                "1240",
                "2500",
                "20"
            ],
            "options": {
                "cwd": "${workspaceFolder}/C"
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "dependsOn": "build",
            "problemMatcher": []
        }
    ]
}