{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/C/bin/HarpListen", // Replace with your actual executable
            "args": ["self", "1045", "1240", "2500", "20"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/C",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "targetArchitecture": "x86_64"
        }
    ]
}